var akt = false

func _physics_process(delta):
	var global = $\"/root/Global\"
	var player = global.sus
	if player is KinematicBody2D and not akt:
		akt = overlaps_body(player)
		if akt:
			global.chekpoint=PackedScene.new()
			global.chekpoint.pack(get_tree().current_scene)
			global.emit_signal(\"chekpoint_activated\")
			global.connect(\"chekpoint_activated\",self,\"chekpointoff\")
	$CollisionShape2D/OffCP.visible = not akt
	$CollisionShape2D/OnCP.visible = akt






func chekpointOff():
	akt = false
	$\"/root/Global\".disconnect(\"chekpoint_activated\",self,\"chekpointoff\")
	
